{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* --- ¡LA CORRECCIÓN MÁS IMPORTANTE! --- */
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,     // <-- Esto está bien (era tu petición)
    "noUnusedParameters": false, // <-- Esto está bien (era tu petición)
    "noFallthroughCasesInSwitch": true,

    /* --- ¡LA OTRA CORRECCIÓN IMPORTANTE! --- */
    /* Arregla los errores "can only be default-imported" */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}